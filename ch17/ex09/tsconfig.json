{
  "compilerOptions": {
    "target": "ES2020", // 使用するJavaScriptのバージョン
    "module": "ESNext", // ESモジュールとしてコンパイル
    "moduleResolution": "node", // Node.jsのモジュール解決方式
    "outDir": "./src", // 出力ディレクトリ
    "esModuleInterop": true, // CommonJSモジュール互換のimportを有効化
    "skipLibCheck": true, // 型定義ファイルのチェックをスキップ
    "strict": true // 厳密な型チェックを有効化
  },
  "include": ["./*.ts"], // コンパイル対象ファイルの指定
  "exclude": ["node_modules"] // 除外するディレクトリ
}
